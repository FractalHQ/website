---
import ColourGroup from '$lib/components/branding/ColourGroup.astro';
import LogoRainbow from '$lib/components/LogoRainbow.svelte';
import Logo from '$lib/components/branding/Logo.svelte';
import RegularLogo from '$lib/components/Logo.svelte';
import Page from '$lib/layouts/Page.astro';
import { colours } from '$data/colours';

function getLogos(type: 'main' | 'rainbow') {
    const formats = [
        { name: 'SVG', url: 'ghost-logo-$TYPE.svg' },
        { name: 'WEBP 500x', url: 'ghost-logo-$TYPE.webp' },
        { name: 'PNG 500x', url: 'ghost-logo-$TYPE-500.png' },
        { name: 'PNG 1000x', url: 'ghost-logo-$TYPE-1000.png' },
        { name: 'PNG Padded 500x', url: 'ghost-logo-$TYPE-padded.png' },
    ];

    return formats.map(({ name, url }) => ({
        name,
        url: `/logos/${type}/${url.replace(/\$TYPE/g, type)}`,
    }));
}
---

<Page>
    <section class="col">
        <h1>Branding</h1>
        <p>ðŸ˜± You found my secret branding page!</p>
    </section>

    <section class="col">
        <h2>Colours</h2>
        <hr />

        <div class="colours">
            {colours.map((group) => <ColourGroup group={group} />)}
        </div>
    </section>

    <section class="col">
        <h2>Logos</h2>
        <hr />

        <div class="logos">
            <Logo name="Main" formats={getLogos('main')}>
                <RegularLogo />
            </Logo>

            <Logo name="Rainbow" formats={getLogos('rainbow')}>
                <LogoRainbow />
            </Logo>
        </div>
    </section>
</Page>

<style lang="scss">
    .colours {
        display: flex;
        flex-direction: column;
        gap: 22px;
    }

    .logos {
        display: flex;
        gap: 64px;
    }
</style>
