---
import { faEnvelope } from '@fortawesome/free-solid-svg-icons';
import { faDiscord } from '@fortawesome/free-brands-svg-icons';
import { Picture } from '@astrojs/image/components';
import Page from '$layouts/Page.astro';
import Fa from 'svelte-fa';
---

<Page>
    <section class="column g16">
        <h1>Contact</h1>

        <p>
            <Fa icon={faDiscord} />
            You can add me on
            <a href="https://discord.com/users/282839711834177537">Discord (GHOST#7524)</a>
        </p>

        <p>
            <Fa icon={faEnvelope} />
            Otherwise you can email
            <a href="mailto:ghostdevbusiness@gmail.com">ghostdevbusiness@gmail.com</a>
        </p>
    </section>

    <section class="devlounge">
        <a href="https://discord.gg/2Vd4wAjJnm" class="card">
            <Picture widths={[75]} sizes="75px" aspectRatio={1}
                src="https://cdn.discordapp.com/icons/755788441161302136/bc7d982c002e2786e34c17f58b848b06.webp?size=96"
                alt="The Dev Lounge logo8" />

            <div class="column meta">
                <h4>The Dev Lounge</h4>
                <p>You can join my Discord server to chat with fellow Developers, share projects, and get help with
                    code!
                </p>
            </div>
        </a>
    </section>
</Page>

<style lang="scss">
    @import 'src/helpers/media';

    .devlounge {
        .card {
            border-color: #cf4a4a !important;

            flex-direction: row !important;
            align-items: center !important;

            margin: 0 auto;

            @include media('<500px') {
                flex-direction: column !important;
                text-align: center !important;

                .meta {
                    text-align: center;
                    align-items: center;
                }
            }
        }

        position: fixed;
        bottom: 32px;
        left: 50%;
        transform: translateX(-50%);

        width: calc(100% - 64px);
        max-width: 1600px;
        margin: 0 auto;
    }
</style>