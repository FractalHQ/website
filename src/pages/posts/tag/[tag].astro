---
import PostFilter from '$components/posts/PostFilter.svelte';
import Posts from '$components/posts/Posts.astro';
import { type Tag, tags } from '$data/tags';
import Page from '$layouts/Page.astro';

const tag = Astro.params.tag as Tag;

export function getStaticPaths() {
    return tags.map((tag) => ({ params: { tag } }));
}
---

<Page>
    <PostFilter selectedTag={tag} />
    <Posts filter={tag} />
</Page>
